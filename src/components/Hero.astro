---
import logo from '@assets/logo.svg'
---

<div class="background">
  <div class="container">
    <img class="logo" src={logo.src} alt="logo">
    <h1>Shorten your URLs</h1>
    <input type="text">
  </div>
</div>

<style>
  .background {
    width: 100%;
    height: clamp(30rem, 100%, 80rem);
    background: radial-gradient(circle at 10% 10%, rgb(109, 197, 255), rgb(233, 222, 105), rgb(213, 143, 90));
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.4);
    border-radius: 1rem;
    padding: 2rem;
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(1rem);
  }

  .logo {
    width: 18rem;
  }

  h1 {
    margin: 0;
    font-size: 1.5rem;
    color: #0e0e0e;
  }

  input {
    outline: none;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 0.25rem;
    font-size: 1.25rem;
    background: rgba(255, 255, 255, 0.8);
    border: 1px solid #FFFFFF;
    width: 30rem;
  }

  input:focus {
    border: 1px solid #52a0ff;
  }
</style>
