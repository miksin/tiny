---
import Form from '@components/Form.svelte'
---

<div class="background">
  <img class="logo" src="/logo.svg" alt="logo">
  <Form client:load />
</div>

<style>
  .background {
    width: 100%;
    height: clamp(30rem, 100%, 80rem);
    background: radial-gradient(circle at 10% 10%, rgb(109, 197, 255), rgb(233, 222, 105), rgb(213, 143, 90));
    display: flex;
    flex-direction: column;
    gap: 2rem;
    padding-top: 10rem;
    align-items: center;
  }

  .logo {
    width: min(20rem, 100%);
  }
</style>
